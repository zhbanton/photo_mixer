<nav class="top-bar" data-topbar>
  <ul class="title-area">
    <li class="name">
      <h1 class="photo-mixer"><%= link_to'Photo-Mixer', images_path %></h1>
    </li>
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>
 </nav>

<div class='row'>
  <div class='small-11 small-centered columns'>
    <h1 class='header-1'>Sign in</h1>
    <%= form_for(
          resource,
          as: resource_name,
          url: session_path(resource_name),
          html: { class: 'upload-form' }) do |f| %>
      <%= f.label :login, "Email or Username", class: 'form-text' %><br />
      <%= f.text_field :login, autofocus: true %>
      <%= f.label :password, class: 'form-text' %><br />
      <%= f.password_field :password, autocomplete: "off" %>
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %> <%= f.label :remember_me, class: 'form-text' %><br/>
      <% end -%>
      <%= f.submit "Sign in", class: 'button [radius round]' %>
    <% end %>
<%= render "devise/shared/links" %>
  </div>
</div>

