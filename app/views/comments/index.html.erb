<h3><%= @image.caption %></h3>
<p>
  by <%= @image.user.email %>
  | <%= time_ago_in_words(@image.created_at) %>
</p>
image
<br>
<br>
<%= pluralize(@image.score, 'point') %>
<% if user_signed_in? %>
  | <%= vote_link(@image, 'up') %>
  | <%= vote_link(@image, 'down') %>
<% else %>
  | Upvote | Downvote
<% end %>

<h3>Comments</h3>

<% if user_signed_in? %>
  <%= form_for [@image, @comment] do |f| %>
    <%= f.text_area :body, placeholder: 'Enter comment...' %>
    <%= f.submit 'AddComment' %>
  <% end %>
<% end %>

<div id="comments">
  <% @comments.each do |comment| %>
    <div class="comment">
      <hr>
        <p>
          <%= pluralize(comment.score, 'point') %>
          by <%= comment.user.email %>
          <%= time_ago_in_words(comment.created_at) %> ago
          <% if user_signed_in? %>
            | <%= vote_link(comment, 'up') %>
            | <%= vote_link(comment, 'down') %>
          <% end %>
        </p>
        <%= simple_format(comment.body) %>
    </div>
  <% end %>
</div>
