<div id="comments">
  <% @comments.each do |comment| %>
    <div data-score=<%= comment.score %> data-created-at=<%= comment.created_at.to_i %> class="panel comment">
      <%= simple_format(comment.body) %>
      <p id='byline'>
        <%= image_tag(comment.user.avatar.url(:small_avatar)) %>
        by <%= link_to comment.user.username, profile_path(comment.user.id) %>
        <%= time_ago_in_words(comment.created_at) %> ago
        | <%= pluralize(comment.score, 'point') %>
        <%= render 'shared/byline', direction: current_user.get_vote(comment).present? ? current_user.get_vote(comment).direction : 'neutral', votable: comment %>
      </p>
    </div>
  <% end %>
</div>
