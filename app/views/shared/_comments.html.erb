<div id="comments">

  <% @comments.each do |comment| %>
    <div class='panel'>
      <div data-score=<%= comment.score %> class="comment">
          <%= simple_format(comment.body, class: 'comment') %>
      </div>
      <p id='byline'>
            <%= image_tag(current_user.avatar.url(:small_avatar)) %>
            by <%= link_to comment.user.username, profile_path(comment.user.id) %>
            <%= time_ago_in_words(comment.created_at) %> ago
            | <%= pluralize(comment.score, 'point') %>
            <%= render 'shared/byline', votable: comment %>
          </p>
    </div>
  <% end %>
</div>
