<span class= "vote">
  <% if user_signed_in? %>
      <span class='points'>
        | <%= pluralize(votable.score, 'point') %>
      </span>
      | <a data-direction= <%= votable.get_vote_direction(current_user) %> class= <%= votable.get_vote_direction(current_user)%> id="upvote" href=<%= "/#{votable.class.name.downcase.pluralize}/#{votable.id}/vote" %>>Upvote</a>
      | <a data-direction= <%= votable.get_vote_direction(current_user) %> class= <%= votable.get_vote_direction(current_user)%> id="downvote" href=<%= "/#{votable.class.name.downcase.pluralize}/#{votable.id}/vote" %>>Downvote</a>
  <% end %>
</span>
