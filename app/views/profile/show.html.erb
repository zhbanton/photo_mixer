<%= render 'shared/nav' %>
<!-- Row 1 -->
<div class='row'>
  <div class='large-4 columns'>
      <div><%= image_tag(User.find(params[:id]).avatar.url(:large_avatar)) %></div><br>
    <ul class="tabs vertical" data-tab>
      <li class="tab-title active"><a href="#panel1a">My Images</a></li>
      <li class="tab-title"><a href="#panel2a">My Comments</a></li>
      <li class="tab-title"><a href="#panel3a">Favorites</a></li>
      <li class="tab-title"><a href="#panel4a">My Tags</a></li>
    </ul><br>

    <div class='stats'>
    </div>

  </div>

  <div class='large-8 columns'>
    <div class="tabs-content vertical">
      <div class="content active" id="panel1a">
        <ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-4">
          <% @uploaded_images.each do |image| %>
            <% if user_signed_in? && image.user == current_user %>
              <li> <%= link_to image_tag(image.image_path.url(:thumb)), edit_image_path(image) %></li>
            <% else %>
              <li><%= link_to image_tag(image.image_path.url(:thumb)), image_comments_path(image) %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
      <div class="content" id="panel2a">
        <%= render 'shared/comments' %>
      </div>
      <div class="content" id="panel3a">
        <ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-4">
          <% @favorite_images.each do |image| %>
            <% if user_signed_in? && image.user == current_user %>
              <li> <%= link_to image_tag(image.image_path.url(:thumb)), edit_image_path(image) %></li>
            <% else %>
              <li><%= link_to image_tag(image.image_path.url(:thumb)), image_comments_path(image) %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
      <div class="content" id="panel4a">
        <p>TAGS TAGS TAGS!.</p>
      </div>
    </div>
  </div>
 </div>

